@using NetCoreSecurity.Models.Student
@model IEnumerable<CourseGrade>
@using System.Text.Encodings.Web;

@addTagHelper "*, Microsoft.AspNetCore.Mvc.TagHelpers"

@{
    ViewData["Title"] = "Student Home";
    Layout = "_ContentLayout";
}
<fieldset>
    <h2>Welcome @User.Identity.Name !</h2>
    <a asp-action="AddGrade">Add Grade</a>
    @foreach (var grade in Model)
    {
        @* <h3>@Html.Raw(grade.CourseName)</h3> *@
        <h3>@HtmlEncoder.Default.Encode(grade.CourseName)</h3>  //xss 
        <p>
            Professor: <strong>@grade.ProfessorName</strong><br>
            Grade: @grade.Grade%
        </p>

    }
</fieldset>